

/* new  */

.showInfo {
    display: flex;
    line-height: 2.5em;
    text-align: center;
}
.showInfo .label {
    flex: 1;
}
.ss-row{
    display: flex;
}
.ss-col{
    background: LightGrey; 
    margin: 1px;
