.wrapper {
    padding: 5px;
}

.flex-container {
    padding: 0;
    margin: 0 auto;
    list-style: none;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
    line-height:1em;
    width: 90%;
}

.flex-item {
    background: LightGrey;
    margin: 1px;
    color: white;
    font-weight: bold;
    font-size: 14px;
    text-align: center;
    flex: 1 0 auto;
    height: auto;
    font-family: "Lucida Console", Monaco, monospace
}

.open {
    background: green;
}

.mine {
    background: red;
}

.flag {
    
    background: blue;
}

.flex-item:before {
    content: '';
    display: block;
    float: left;
    padding-top:100%;
}

.header {
    display: flex;
    font-size: 14px;
    line-height: 2.5em;
    text-align: left;
}

.header .label {
    flex: 1;
}

.footer {
    padding-top: 30px;
    display: flex;   
    justify-content: space-around;
    align-items: center;
}

.button-hover {
    background-color: LightGrey;
}
